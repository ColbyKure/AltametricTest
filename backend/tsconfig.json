{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["esnext", "dom"],  // Ensure 'dom' is included
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}


